<MudItem md="12">
    @if (ApplicationState.Patient.IsPatientSelected())
    {
        <EditPatient Id="@ApplicationState.Patient.GetSelectPatientId()" GoBack="GoBack"/>
    }
    else
    {
        <PatientList TabChangeClick="GotoEditPatient"/>
    }
</MudItem>

@code {
    [Parameter] public EventCallback<int> TabChangeClick { get; set; }

    private async Task GoBack()
    {
        ApplicationState.Patient.ClearPatient();
        await TabChangeClick.InvokeAsync(0);
    }

    protected async Task GotoEditPatient(int e)
    {
        await TabChangeClick.InvokeAsync(e);
    }

}
