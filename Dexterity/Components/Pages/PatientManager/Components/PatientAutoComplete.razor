@using Shared.Responses.Patient
<MudItem xs="12" sm="6" md="12">
    <FieldLabel>Patients</FieldLabel>
    <Autocomplete TItem="PatientListResponse"
                  TValue="PatientListResponse"
                  Data="@PatientList"
                  TextField="@((item) => item.FullName)"
                  ValueField="@((item) => item)"
                  Placeholder="Search..."
                  Filter="AutocompleteFilter.StartsWith"
                  FreeTyping
                  SelectedValueChanged="OnChangePatient"
                  CustomFilter="@((item, searchValue) => item.FullName.IndexOf(searchValue, 0, StringComparison.CurrentCultureIgnoreCase) >= 0)">
        <NotFoundContent> Sorry... @context was not found. </NotFoundContent>
    </Autocomplete>
</MudItem>

@code {
    [Parameter] public List<PatientListResponse> PatientList { get; set; } = new();
    [Parameter] public EventCallback<PatientListResponse> OnChangePatient { get; set; }
}