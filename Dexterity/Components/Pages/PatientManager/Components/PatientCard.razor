@using Services.Features.PatientManagement.Dtos
<MudCard Style="margin-top: 20px">
    <MudStack  >
        <MudItem>
            <MudStack Row Spacing="10" >
                <MudText>DOB: @Patient.DateOfBirth.ToString("d")</MudText>
                <MudText>Gender:@Patient.Gender</MudText>
            </MudStack>
        </MudItem>
        <MudItem>
            <MudStack Row Spacing="10" Style="margin:15px"> 
                <MudText>Home#: @Patient.Mobile</MudText>
                <MudText>Mobile: @Patient.Mobile</MudText>
            </MudStack>
        </MudItem>
        <MudItem>
            <MudStack Row Spacing="10" Style="margin:15px">
                <MudText>Address: @Patient.AddressLine1</MudText>
            </MudStack>
        </MudItem>
    </MudStack>
</MudCard>

@code {
    [Parameter] public PatientListDto Patient { get; set; } = new();
}