@using Services.Features.Consultation.Dto
@using AlignItems = Radzen.AlignItems
@using Orientation = Radzen.Orientation
@using Dexterity.Components.Pages.Consultation.BaselineDetail
<RadzenRow Gap="2rem" class="rz-p-0 rz-p-lg-4">
    <RadzenColumn Size="12" SizeMD="5">
        <RadzenStack>
            <RadzenFieldset Text="">
                <RadzenStack Gap="1rem">
                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="12">
                            <ConsultationList Consultations="Consultations" RowSelected="RowSelected"/>
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenStack>
            </RadzenFieldset>
        </RadzenStack>
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="7">
        <RadzenStack>
            <RadzenFieldset Text="Baseline Details">
                <RadzenStack Gap="1rem">
                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="12">
                            <BaselineDetailList/>
                        </RadzenColumn>
                    
                    </RadzenRow>
                </RadzenStack>
            </RadzenFieldset>
            <RadzenFieldset Text="Current Medications">
                <RadzenStack Gap="1rem">
                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="3">
                            <RadzenLabel Text="Trans #" Component="TransId"/>
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="9">
                            <RadzenTextBox Disabled="true" Placeholder="S4485" Style="width: 100%;" Name="TransId"/>
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenStack>
            </RadzenFieldset>
            <RadzenFieldset Text="Active Diagnosis">
                <RadzenStack Gap="1rem">
                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="3">
                            <RadzenLabel Text="Trans #" Component="TransId"/>
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="9">
                            <RadzenTextBox Disabled="true" Placeholder="S4485" Style="width: 100%;" Name="TransId"/>
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenStack>
            </RadzenFieldset>
            <RadzenFieldset Text="Social & Past Medical History">
                <RadzenStack Gap="1rem">
                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="3">
                            <RadzenLabel Text="Trans #" Component="TransId"/>
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="9">
                            <RadzenTextBox Disabled="true" Placeholder="S4485" Style="width: 100%;" Name="TransId"/>
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenStack>
            </RadzenFieldset>
            <RadzenFieldset Text="Patient Documents">
                <RadzenStack Gap="1rem">
                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="3">
                            <RadzenLabel Text="Trans #" Component="TransId"/>
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="9">
                            <RadzenTextBox Disabled="true" Placeholder="S4485" Style="width: 100%;" Name="TransId"/>
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenStack>
            </RadzenFieldset>
        </RadzenStack>
    </RadzenColumn>
</RadzenRow>
@code{
    [Parameter] public EventCallback<RowSelectEventArgs<GetConsultationDetailDto>> RowSelected { get; set; }
    [Parameter] public List<GetConsultationDetailDto> Consultations { get; set; } = new();

    
}