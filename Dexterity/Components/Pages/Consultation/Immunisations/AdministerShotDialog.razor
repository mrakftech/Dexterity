@using Domain.Entities.Consultation
<DexDialog>
    <DialogTitle>Administer Shot</DialogTitle>
    <Content>
        <DexForm Model="AdministerShotDto" ColumnCount="2">
            <Fields>
                <FormItem Field="@nameof(AdministerShot.Shot.Name)" IsEnabled="false" LabelText="Immunisation" ColumnSpan="1" />
                <FormItem Field="@nameof(AdministerShot.Shot.Method)" IsEnabled="false" LabelText="Method" ColumnSpan="1" />
                <FormItem Field="@nameof(AdministerShot.DueDate)" IsEnabled="false" LabelText="Due Date" EditorType="FormEditorType.DatePicker"/>
                <FormItem Field="@nameof(AdministerShot.Shot.Dose)" IsEnabled="false" LabelText="Dose" ColumnSpan="1" />
                <FormItem Field="@nameof(AdministerShot.Hcp.FullName)" IsEnabled="false" LabelText="HCP" ColumnSpan="1" />
            </Fields>
        </DexForm>
    </Content>
</DexDialog>

@code {
    [CascadingParameter] public MudDialogInstance MudDialog { get; set; }
    [Parameter] public AdministerShot AdministerShotDto { get; set; } = new();
}