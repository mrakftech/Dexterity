@layout MainLayout
@page "/settings"
@using Dexterity.Components.Pages.Settings.Components
<TopTitleBar Title="Settings"
             Image="modules/settings.svg">
</TopTitleBar>
<MudItem md="12" Class="vertical-space">
    <InnerLayout >
        <NavigationItems>
            <RadzenPanelMenuItem Text="Categories & Templates">
                <DexMenuItem Text="Sms Templates" Icon="fas fa-comment-sms" Click="@(() => ClickChanged(0))"/>
                <DexMenuItem Text="Email Templates" Icon="fas fa-envelope-open-text" Click="@(() => ClickChanged(1))"/>
                <DexMenuItem Text="Clinics" Icon="fas fa-house-chimney-medical" Click="@(() => ClickChanged(2))"/>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Appointments">
                <DexMenuItem Text="Appointment Types" Icon="fas fa-calendar-clock" Click="@(() => ClickChanged(3))"/>
                <DexMenuItem Text="Appointment Cancellation Reason" Icon="fas fa-ban" Click="@(() => ClickChanged(4))"/>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Types">
                <DexMenuItem Text="Account Types" Icon="fas fa-file-invoice" Click="@(() => ClickChanged(5))"/>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Other Types">
                <DexMenuItem Text="POMR Groups" Icon="fas fa-file-invoice" Click="@(() => ClickChanged(6))"/>
                <DexMenuItem Text="Note Template" Icon="fas fa-file-invoice" Click="@(() => ClickChanged(7))"/>
            </RadzenPanelMenuItem>
        </NavigationItems>

        <DexContentTabs>
            <MudTabs @ref="tabs">
                <MudTabPanel >
                    <SmsTemplateTab/>
                </MudTabPanel>
                <MudTabPanel >
                    <EmailTemplateTab/>
                </MudTabPanel>
                <MudTabPanel >
                    <ClinicTab/>
                </MudTabPanel>
                <MudTabPanel >
                    <AppointmentTypeTab/>
                </MudTabPanel>
                <MudTabPanel >
                    <AppointmentCancelReasonTab/>
                </MudTabPanel>
                <MudTabPanel >
                    <AccountTypeTab/>
                </MudTabPanel>
                <MudTabPanel >
                    <PomrGroupTab/>
                </MudTabPanel>
                <MudTabPanel >
                    <NoteTemplateTab/>
                </MudTabPanel>
            </MudTabs>
        </DexContentTabs>
    </InnerLayout>
</MudItem>

@code {
    MudTabs tabs;

    private void ClickChanged(int tabIndex)
    {
        tabs.ActivatePanel(tabIndex);
    }

}