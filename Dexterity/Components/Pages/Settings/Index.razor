@layout MainLayout
@page "/settings"
@using Dexterity.Components.Pages.Settings.Account
@using Dexterity.Components.Pages.Settings.PomrGroup
@using Dexterity.Components.Pages.Settings.NoteTemplate
@using Dexterity.Components.Pages.Settings.Immunisations
@using Dexterity.Components.Pages.Settings.Appointment
@using Dexterity.Components.Pages.Settings.Clinic
@using Dexterity.Components.Pages.Settings.SmsTemplate
@using Dexterity.Components.Pages.Settings.Drugs
@using Dexterity.Components.Pages.Settings.Investigations
@using Dexterity.Components.Pages.Settings.Letter
@using Dexterity.Components.Pages.Settings.SketchTemplate
@using Dexterity.Components.Pages.Settings.CustomForms
@using Dexterity.Components.Pages.Settings.DmsCategory
<TopTitleBar Title="Settings"
             Image="modules/settings.svg">
</TopTitleBar>
<MudItem md="12" Class="vertical-space">
    <InnerLayout ShowHeader="false" DrawerWidth="250px">
        <NavigationItems>
            <RadzenPanelMenuItem Text="System Types" Icon="@DexHelperMethod.FaIcon("category-icon")">
                <DexMenuItem Text="Letter Types" Icon="fas fa-file-invoice" Click="@(() => ClickChanged(11))"/>
                <DexMenuItem Text="Appointment Types" Icon="fas fa-calendar-clock" Click="@(() => ClickChanged(3))"/>
                <DexMenuItem Text="Account Types" Icon="fas fa-file-invoice" Click="@(() => ClickChanged(5))"/>
                <DexMenuItem Text="Consultation Note Templates" Icon="fas fa-file-invoice" Click="@(() => ClickChanged(7))"/>
                <DexMenuItem Text="Appointment Cancellation Reason" Icon="fas fa-ban" Click="@(() => ClickChanged(4))"/>
                <DexMenuItem Text="Sketch Categories" Icon="fas fa-list" Click="@(() => ClickChanged(12))"/>
                <DexMenuItem Text="Custom Forms" Icon="fas fa-window-restore" Click="@(() => ClickChanged(13))"/>
                <DexMenuItem Text="Dms Categories" Icon="fas fa-window-restore" Click="@(() => ClickChanged(14))"/>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Other Types" Icon="@DexHelperMethod.FaIcon("types-icon")">
                <DexMenuItem Text="Shots" Icon="fas fa-syringe" Click="@(() => ClickChanged(8))"/>
                <DexMenuItem Text="POMR Groups" Icon="fas fa-file-invoice" Click="@(() => ClickChanged(6))"/>
                <DexMenuItem Text="Drug Management" Icon="fas fa-pills" Click="@(() => ClickChanged(9))"/>
                <DexMenuItem Text="Investigations" Icon="fas fa-user-magnifying-glass"
                             Click="@(() => ClickChanged(10))"/>
                <DexMenuItem Text="Sms Templates" Icon="fas fa-comment-sms" Click="@(() => ClickChanged(0))"/>
                <DexMenuItem Text="Email Templates" Icon="fas fa-envelope-open-text" Click="@(() => ClickChanged(1))"/>
                <DexMenuItem Text="Clinics" Icon="fas fa-house-chimney-medical" Click="@(() => ClickChanged(2))"/>
            </RadzenPanelMenuItem>
        </NavigationItems>
        <DexContentTabs>
            <MudTabs @ref="_tabs" Rounded="true" PanelClass="flex-grow-1">
                <MudTabPanel>
                    <SmsTemplateTab/>
                </MudTabPanel>
                <MudTabPanel>
                    <EmailTemplateTab/>
                </MudTabPanel>
                <MudTabPanel>
                    <ClinicDetails/>
                </MudTabPanel>
                <MudTabPanel>
                    <AppointmentTypeDetails/>
                </MudTabPanel>
                <MudTabPanel>
                    <CancelReasonDetails/>
                </MudTabPanel>
                <MudTabPanel>
                    <AppoitmentTypeDetail/>
                </MudTabPanel>
                <MudTabPanel>
                    <PomrGroupTab/>
                </MudTabPanel>
                <MudTabPanel>
                    <NoteTemplateDetails/>
                </MudTabPanel>
                <MudTabPanel>
                    <ImmunisationDetail/>
                </MudTabPanel>
                <MudTabPanel>
                    <DrugManagementDetails/>
                </MudTabPanel>
                <MudTabPanel>
                    <InvestigationTabs/>
                </MudTabPanel>
                <MudTabPanel>
                    <LetterTab/>
                </MudTabPanel>
                <MudTabPanel>
                    <SketchTab/>
                </MudTabPanel>
                <MudTabPanel>
                    <CustomFormTab/>
                </MudTabPanel>
                <MudTabPanel>
                    <DmsCategoryDetails/>
                </MudTabPanel>
            </MudTabs>
        </DexContentTabs>
    </InnerLayout>
</MudItem>
<style>
    .e-menu-wrapper, .e-menu-container {
        background-image: linear-gradient(to top, #505285 0%, #585e92 12%, #65689f 25%, #7474b0 37%, #7e7ebb 50%, #8389c7 62%, #9795d4 75%, #a2a1dc 87%, #b5aee4 100%) !important;
        color: #ffffff !important;
        box-shadow: var(--rz-header-shadow);
    }
</style>

@code {
    MudTabs _tabs;

    private void ClickChanged(int tabIndex)
    {
        _tabs.ActivatePanel(tabIndex);
    }

}