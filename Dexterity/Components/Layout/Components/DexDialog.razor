<MudDialog >
    <TitleContent>
        <h3 style="font-weight: bolder">@DialogTitle</h3>
    </TitleContent>
    <DialogContent>
        @Content
    </DialogContent>
    <DialogActions>
        @ActionButtons
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public RenderFragment DialogTitle { get; set; }
    [Parameter] public RenderFragment Content { get; set; }
    [Parameter] public RenderFragment ActionButtons { get; set; }
}