@using Dexterity.Components.Pages.Messaging.Tabs
<MudStack Row>
    <MudTooltip Text="Notifications">
        <MudIconButton Icon="" Color="MudColor.Info"></MudIconButton>
        <MudMenu Icon="bell-icon"
                 AriaLabel="Open user menu" AnchorOrigin="Origin.BottomCenter">
            <MudMenuItem >4 Unread Referrals</MudMenuItem>
            <MudMenuItem >1 Document Review</MudMenuItem>
        </MudMenu>
    </MudTooltip>
    <MudTooltip Text="Instant Messaging">
        <MudIconButton Icon="chat-icon" Color="MudColor.Info" OnClick="OpenChatDialog"></MudIconButton>
    </MudTooltip>
    <MudTooltip Text="My Tasks">
        <MudIconButton Icon="task-list-icon" Color="MudColor.Info" OnClick="OpenUserTaskModal"></MudIconButton>
    </MudTooltip>

</MudStack>

@code {

    private async Task OpenUserTaskModal(MouseEventArgs obj)
    {
        var parameters = new DialogParameters();
        var options = new DialogOptions() {CloseButton = true, MaxWidth = MaxWidth.Large, FullWidth = true, Position = DialogPosition.Center};
        await DialogService.ShowAsync<UserTasksTab>("", parameters, options);
    }

    private async Task OpenChatDialog()
    {
        var parameters = new DialogParameters();
        var options = new DialogOptions() {CloseButton = true, MaxWidth = MaxWidth.Large, FullWidth = true, Position = DialogPosition.Center};
        await DialogService.ShowAsync<ChatDialog>("", parameters, options);
    }

}