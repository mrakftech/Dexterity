<MudAppBar Color="MudColor.Primary" Fixed="false" Style="z-index: 1;">
    <MudImage Src=@($"assets/images/{Image}") Fluid="true" Width="48"></MudImage>
    <MudText
        Typo="Typo.h4"
        Align="MudAlign.Center"
        Style="color: white;font-weight: bolder;margin-left: 15px">
        @Title
    </MudText>

</MudAppBar>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Image { get; set; } = "waitingRoom/waiting-room.svg";
}