<SfGrid DataSource="@DataSource" Width="auto" Height="@Height" Toolbar="@(new List<string>() {"Search"})"
        AllowPaging="true">
    <GridPageSettings PageCount="5" PageSizes="true"></GridPageSettings>
    @DexGridSettings
    <GridColumns>
        @DexGridColumns
    </GridColumns>
    <SfSpinner @bind-Visible="@Loading">
    </SfSpinner>
</SfGrid>

@code {
[Parameter] public IEnumerable<object> DataSource { get; set; }
[Parameter] public bool Loading { get; set; }
[Parameter] public string Height { get; set; } = "500px";
[Parameter] public RenderFragment DexGridColumns { get; set; }
[Parameter] public RenderFragment DexGridSettings { get; set; }
}