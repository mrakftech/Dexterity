@code{

    private async Task OpenVideoLinkModal()
    {
        var parameters = new DialogParameters { };
        var options = new DialogOptions() {CloseButton = false, MaxWidth = MaxWidth.Large, FullWidth = true, Position = DialogPosition.Center, FullScreen = true, CloseOnEscapeKey = false};
        var dialogresult = await DialogService.ShowAsync<MeetingModal>("", parameters, options);
    }

}