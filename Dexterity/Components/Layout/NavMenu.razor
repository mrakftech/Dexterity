    <MudItem>
        <MudNavLink Match="NavLinkMatch.All" Icon="fas fa-home" IconColor="MudColor.Info" Href="/home">Dashboard</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Icon="fas fa-calendar-check" IconColor="MudColor.Info" Href="/appointments">Appointment</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Icon="fas fa-hourglass-start" IconColor="MudColor.Info" Href="/waiting-room">Waiting Room</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Icon="fas fa-user-doctor-message" IconColor="MudColor.Info" Href="/consultation">Consultation</MudNavLink>
        <MudNavLink Match="NavLinkMatch.All" Icon="fas fa-hospital-user" IconColor="MudColor.Info" Href="/patient-management">Patient Manager</MudNavLink>
